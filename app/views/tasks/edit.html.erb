
<h1>Edit your task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group col-md-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group col-md-4">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="field">
    <%=  f.label :completed %>
    <%=  f.check_box :completed %>
  </div>

  <div>
  <%= f.submit class: 'btn btn-primary col-md-4' %>
  </div>
<% end %>
